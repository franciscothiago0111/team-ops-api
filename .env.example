# Database
DATABASE_URL="postgresql://nestuser:nestpass@localhost:5433/nestdb"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server
PORT=3001

# Email Configuration
EMAIL_PROVIDER=sendgrid # Options: sendgrid, nodemailer

# SendGrid (Default Provider)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@teamops.com

# Nodemailer (Alternative Provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@teamops.com

# Storage Configuration
STORAGE_PROVIDER=cloudflare-r2 # Options: cloudflare-r2

# Cloudflare R2 (Default Storage Provider)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-bucket.r2.dev # Optional: For public access URLs

